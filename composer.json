{
    "name": "iplan-ai/laravel-shareable-models",
    "description": "Create shareable links from your eloquent models.",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Salman",
            "email": "salman@iplan.ai"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/database": "^9.0",
        "illuminate/http": "^9.0",
        "illuminate/support": "^9.0",
        "ramsey/uuid": "^4.0"
    },
    "require-dev": {
        "doctrine/dbal": "^3.1",
        "ergebnis/composer-normalize": "^2.15",
        "mockery/mockery": "^1.4",
        "nunomaduro/larastan": "^1.0",
        "orchestra/testbench": "^7.0",
        "phpunit/phpunit": "^9.5.8",
        "roave/security-advisories": "dev-latest"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Sassnowski\\LaravelShareableModel\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sassnowski\\LaravelShareableModel\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Sassnowski\\LaravelShareableModel\\ShareableLinkServiceProvider"
            ]
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@composer normalize"
        ],
        "post-update-cmd": [
            "@composer normalize"
        ],
        "analyse": [
            "vendor/bin/phpstan analyse"
        ],
        "check": [
            "@analyse",
            "@test"
        ],
        "test": [
            "vendor/bin/phpunit"
        ]
    }
}
